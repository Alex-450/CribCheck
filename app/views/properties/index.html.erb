<div class="container mt-4 mr-1 mw-100">
  <div class="row">

    <div class="col-12 col-md-6 col-lg-8 mt-1">
      <h1>Properties</h1>
      <div class="d-flex flex-wrap m-n2">
        <% @properties.each do |property| %>
          <%= link_to property_path(property), class: "card-index text-center d-block m-2" do %>
            <%= image_tag "house.png" %>
            <p> <%= property.address %></p>
            <p>Landlord: </p>
            <p>Rating: ★★★☆☆</p>
            <p class="btn-action">See property</p>
          <% end %>
        <% end %>
      </div>
    </div>

    <div id="map" class="col-12 col-md-6 col-lg-4 mt-1"
     style="width: 100vw; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
