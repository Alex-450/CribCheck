<div id="properties-container" class="container mr-1 mw-100">
  <div class="row">
    <header class="col-12 text-center">
      <h1>Properties</h1>
      <%= form_tag properties_path, class: 'search', method: :get do %>
      <%= text_field_tag :query, nil, placeholder: "Search...", class:"form-tag"%>
      <button type="submit" class="btn btn-search">
        Search <%= icon('fas', 'search') %>
      </button>
      <% end %>
    </header>

    <div class="col-12 col-md-6 col-lg-6">
      <div class="cards-index d-flex flex-wrap">
        <% @properties.each do |property| %>
          <%= link_to property_path(property), class: "card-index" do %>
            <%= image_tag "house.png" %>
            <p> <%= property.address %></p>
            <p>Landlord: John Doe</p>
            <p>Rating: ★★★☆☆</p>
            <p class="btn-submit">See property</p>
          <% end %>
        <% end %>
      </div>
    </div>

    <div id="map-container" class="col-12 col-md-6 col-lg-6">
      <div id="map"
      style=""
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>
